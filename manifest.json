{
  "manifest_version": 2,
  "name": "Twitter Following Only",
  "version": "1.0",
  "description": "Hides the 'For You' tab and keeps you on 'Following' on X/Twitter",
  "permissions": [
    "storage",
    "*://twitter.com/*",
    "*://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://x.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "twitter-following-only@example.com",
      "strict_min_version": "57.0"
    }
  },
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  }
}
